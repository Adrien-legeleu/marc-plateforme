datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Candidate {
  id        String   @id @default(cuid())
  type      String   // "player" | "coach"
  name      String
  email     String
  cvUrl     String
  premium   Boolean  @default(false)
  createdAt DateTime @default(now())
}

